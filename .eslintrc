{
  "parser": "babel-eslint",
  "extends": ["airbnb"], //rules airbnb developers have to use when they write javascript -- style guide ** airbnb eslint style guide
  "rules": {
    "prefer-destructuring": ["error", {"object": false, "array": false}],
    "max-len": [1, 300, 2, { "ignoreComments": true }],
    "no-console": "off",
    "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": [] }]
  },
  "env": {
    "browser": true
  }
}